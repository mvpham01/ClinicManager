@model eProjectP3.Models.staff

@{
    ViewBag.Title = "Staff Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Staff Details</h2>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Staff Information</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Email)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Position)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Position)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Contact_Number)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Contact_Number)
            </dd>
        </dl>
    </div>
</div>

<p>
    @Html.ActionLink("Back to Education Details", "Details", "Education", new { id = ViewBag.EducationID })
</p>
