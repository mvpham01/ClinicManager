@model eProjectP3.Models.scientific_application

@{
    ViewBag.Title = "Scientific";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage.cshtml";
}

@using (Html.BeginForm("Create", "Scientifics", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="wrapper-table">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-input">
            <label>Image:</label>
            <input type="file" name="uploadFile" />
            @Html.ValidationMessageFor(model => model.Img, "", new { @class = "text-danger" })
        </div>
        <div class="form-input">
            <label>Cost:</label>
            @Html.EditorFor(model => model.Cost, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
            @Html.ValidationMessageFor(model => model.Cost, "", new { @class = "text-danger" })
        </div><div class="form-input">
            <label>Description:</label>
            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
        </div><div class="form-input">
            <label>Name:</label>
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
        <div class="wrapper-btn">
            <span class="btn"><span><input type="submit" value="Create" /></span></span>
            <a href="/admin/scientifics/index" class="btn"><span>Back to List</span></a>
        </div>
    </div>
}
