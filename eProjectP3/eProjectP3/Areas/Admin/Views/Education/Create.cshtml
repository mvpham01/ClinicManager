@model eProjectP3.Models.education_application

@{
    ViewBag.Title = "Education";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="wrapper-table">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-input">
            <label>Subject:</label>
            @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
            @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
        </div>
        <div class="form-input">
            <label>Type:</label>
            @Html.EditorFor(model => model.Type, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
            @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
        </div>
        <div class="form-input">
            <label>Staff Name:</label>
            @Html.DropDownList("Staff_ID", null, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
            @Html.ValidationMessageFor(model => model.Staff_ID, "", new { @class = "text-danger" })
        </div>
        <div class="form-input">
            <label>Date:</label>
            <input type="date" name="date" />
            @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
        </div>
        <div class="form-input">
            <label>Time:</label>
            <input type="time" name="time" />
            @Html.ValidationMessageFor(model => model.Time, "", new { @class = "text-danger" })
        </div>
        <div class="wrapper-btn">
            <span class="btn"><span><input type="submit" value="Create" /></span></span>
            <a href="/admin/education/index" class="btn"><span>Back to List</span></a>
        </div>
    </div>
}
