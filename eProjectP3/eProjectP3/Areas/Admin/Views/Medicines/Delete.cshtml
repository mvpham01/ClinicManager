@model eProjectP3.Models.medical_application

@{
    ViewBag.Title = "Medicine";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage.cshtml";
}

<div class="wrapper-table">
    <h3>Are you sure you want to delete this?</h3>
    <dl class="dl-horizontal">
        <dt>
            Medicine Name
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            Medicine Type
        </dt>
        <dd>
            @Html.DisplayFor(model => model.medical_type.Medicine_Type_Name)
        </dd>
        <dt>
            Image
        </dt>
        <dd>
            @{
                string path = "~/Img/" + Model.Img;

                <img src="@Url.Content(path)" alt="@Model.Img" width="150" class="item-img" />
            }
        </dd>
        <dt>
            Cost
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Cost) $
        </dd>
        <dt>
            Code
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Code)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="wrapper-btn">
            <span class="btn"><span><input type="submit" value="Delete" /></span></span>
            <a href="/admin/medicines/index" class="btn"><span>Back to List</span></a>
        </div>
    }
</div>


