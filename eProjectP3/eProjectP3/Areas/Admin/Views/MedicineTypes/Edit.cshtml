@model eProjectP3.Models.medical_type

@{
    ViewBag.Title = "Medicine Type";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="wrapper-table">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Medicine_Type_ID)

        <div class="form-input">
            <label>Medicine Type Name</label>
            @Html.EditorFor(model => model.Medicine_Type_Name, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
            @Html.ValidationMessageFor(model => model.Medicine_Type_Name, "", new { @class = "text-danger" })
        </div>
        <div class="wrapper-btn">
            <span class="btn"><span><input type="submit" value="Save"/></span></span>
            <a href="/admin/medicinetypes/index" class="btn"><span>Back to List</span></a>
        </div>
    </div>
}
