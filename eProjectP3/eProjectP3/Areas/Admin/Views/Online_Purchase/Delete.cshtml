@model eProjectP3.Models.online_purchase_detail

@{
    ViewBag.Title = "Order";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage.cshtml";
}

<div class="wrapper-table">
    <h3>Are you sure you want to delete this?</h3>
    <dl class="dl-horizontal">
        <dt>
            Purchase ID
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Purchase_Detail_ID)
        </dd>
        <dt>
            Client ID
        </dt>
        <dd>
            @Html.DisplayFor(model => model.OnlinePurchase.Client_ID)
        </dd>
        <dt>
            Client Name
        </dt>
        <dd>
            @Html.DisplayFor(model => model.OnlinePurchase.Client.Clinic_Name)
        </dd>
        <dt>
            Date
        </dt>
        <dd>
            @Html.DisplayFor(model => model.OnlinePurchase.Purchase_Date)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="wrapper-btn">
            <span class="btn"><span><input type="submit" value="Delete" /></span></span>
            <a href="/admin/online_purchase/index" class="btn"><span>Back to List</span></a>
        </div>
    }
</div>
