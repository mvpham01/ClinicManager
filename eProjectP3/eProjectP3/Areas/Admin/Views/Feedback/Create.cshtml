@model eProjectP3.Models.feedback

@{
    ViewBag.Title = "Feedback";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="wrapper-table">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-input">
            <label>Client Name:</label>
            @Html.DropDownList("Client_ID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.client.Clinic_Name, "", new { @class = "text-danger" })
        </div>
        <div class="form-input">
            <label>Content:</label>
            @Html.EditorFor(model => model.Feedback_Text, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
            @Html.ValidationMessageFor(model => model.Feedback_Text, "", new { @class = "text-danger" })
        </div>
        <div class="form-input">
            <input type="datetime" name="date" value="@DateTime.Now.ToString("G")" hidden />
            @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
        </div>
        <div class="wrapper-btn">
            <span class="btn"><span><input type="submit" value="Create" /></span></span>
            <a href="/admin/feedback/index" class="btn"><span>Back to List</span></a>
        </div>
    </div>
}
