@model eProjectP3.Models.feedback

@{
    ViewBag.Title = "Feedback";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="wrapper-table">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Feedback_ID)

        <div class="form-input">
            <label>Client ID</label>
            @Html.EditorFor(model => model.Client_ID, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
            @Html.ValidationMessageFor(model => model.Client_ID, "", new { @class = "text-danger" })
        </div>
        <div class="form-input">
            <label>Content</label>
            @Html.EditorFor(model => model.Feedback_Text, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
            @Html.ValidationMessageFor(model => model.Feedback_Text, "", new { @class = "text-danger" })
        </div>
        <div class="form-input">
            <input type="datetime" name="date" value="@DateTime.Now" hidden />
            @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger", @autocomplete = "off" })
        </div>
        <div class="wrapper-btn">
            <span class="btn"><span><input type="submit" value="Save" /></span></span>
            <a href="/admin/feedback/index" class="btn"><span>Back to List</span></a>
        </div>
    </div>
}
