@model eProjectP3.Models.feedback

@{
    ViewBag.Title = "Feedback";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage.cshtml";
}

<div class="wrapper-table">
    <h3>Are you sure you want to delete this?</h3>
    <dl class="dl-horizontal">
        <dt>
            Client Name
        </dt>
        <dd>
            @Html.DisplayFor(model => model.client.Clinic_Name)
        </dd>
        <dt>
            Content
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Feedback_Text)
        </dd>
        <dt>
            Date
        </dt>
        <dd>
            @Model.Date.Value.ToString("dd/MM/yyyy")
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="wrapper-btn">
            <span class="btn"><span><input type="submit" value="Delete" /></span></span>
            <a href="/admin/feedback/index" class="btn"><span>Back to List</span></a>
        </div>
    }
</div>
