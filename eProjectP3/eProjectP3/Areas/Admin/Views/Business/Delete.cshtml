@model eProjectP3.Models.business_application

@{
    ViewBag.Title = "Business";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage.cshtml";
}

<div class="wrapper-table">
    <h3>Are you sure you want to delete this?</h3>
    <dl class="dl-horizontal">
        <dt>
            Sector
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Sector)
        </dd>
        <dt>
            Amount
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Amount) $
        </dd>
        <dt>
            Date
        </dt>
        <dd>
            @Model.Date.Value.ToString("MM/dd/yyyy")
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="wrapper-btn">
            <span class="btn"><span><input type="submit" value="Delete" /></span></span>
            <a href="/admin/business/index" class="btn"><span>Back to List</span></a>
        </div>
    }
</div>
